{
	"compilerOptions": {
		"module": "esnext",
		"noImplicitAny": true,
		"removeComments": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"baseUrl": "src",
		"paths": {
			"src": ["src"]
		}
	},

	"include": ["src/**/*", "main.ts"],
	"exclude": ["node_modules", "dist", "./dist/**/*"]
}
